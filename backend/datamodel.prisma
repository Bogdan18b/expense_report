type User {
  id: ID! @id @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  expenses: [Expense]
  incomes: [Income]
}

type Expense {
  id: ID! @id @unique
  amount: Float!
  category: String!
  comments: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Income {
  id: ID! @id @unique
  amount: Float!
  category: String!
  comments: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
